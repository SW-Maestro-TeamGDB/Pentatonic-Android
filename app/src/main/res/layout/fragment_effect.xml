<?xml version="1.0" encoding="utf-8"?>

<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        tools:context=".ui.record_processing.EffectFragment">

        <TextView
            android:id="@+id/gainControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_extrabold"
            android:text="게인"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/gainControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/gainControlTitleText">

            <Button
                android:id="@+id/gainMinusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="@{()->viewModel.controlGainEffectLevel(-1)}"
                android:fontFamily="@font/nanum_extrabold"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/gainPlusButton"
                android:layout_width="50dp"
                android:onClick="@{()->viewModel.controlGainEffectLevel(1)}"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:text="+"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/gainProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gainPlusButton"
                android:layout_toRightOf="@+id/gainMinusButton"
                android:max="100"
                android:progress="@{ viewModel.gainEffectLevel}"
                android:progressTint="@color/main_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gainProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="0ms"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/reverbControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gainControlLayout"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanum_extrabold"
            android:text="리버브"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/reverbControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/reverbControlTitleText">

            <Button
                android:id="@+id/reverbMinusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:text="-"
                android:onClick="@{()->viewModel.controlReverbEffectLevel(-1)}"
                android:textSize="24sp" />

            <Button
                android:id="@+id/reverbPlusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:text="+"
                android:onClick="@{()->viewModel.controlReverbEffectLevel(-1)}"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/volumeProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/reverbPlusButton"
                android:layout_toRightOf="@+id/reverbMinusButton"
                android:max="100"
                android:progress="@{viewModel.reverbEffectLevel}"
                android:progressTint="@color/main_regular" />

            <TextView
                android:id="@+id/reverbProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/volumeProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="0"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.record_processing.RecordProcessingViewModel" />
    </data>
</layout>