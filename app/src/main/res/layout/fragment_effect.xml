<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        tools:context=".ui.record_processing.EffectFragment">

        <TextView
            android:id="@+id/gainControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_bold"
            android:text="게인"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/gainControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/gainControlTitleText">

            <ImageButton
                android:id="@+id/gainMinusButton"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:onClick="@{()->viewModel.controlGainEffectLevel(-1)}"
                android:scaleType="fitStart"
                android:src="@drawable/ic_minus"
                app:tint="@color/button_background_gray" />

            <ImageButton
                android:id="@+id/gainPlusButton"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nanum_extrabold"
                android:background="@null"
                android:onClick="@{()->viewModel.controlGainEffectLevel(1)}"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_plus"
                app:tint="@color/button_background_gray" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/gainProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gainPlusButton"
                android:layout_toRightOf="@+id/gainMinusButton"
                android:max="100"
                android:progress="@{ viewModel._gainEffectLevel}"
                android:progressTint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/gainProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="@{viewModel._gainEffectLevel.toString()}"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/reverbControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gainControlLayout"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanum_bold"
            android:text="리버브"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <RelativeLayout
            android:id="@+id/reverbControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/reverbControlTitleText">

            <ImageButton
                android:id="@+id/reverbMinusButton"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:onClick="@{()->viewModel.controlReverbEffectLevel(-1)}"
                android:scaleType="fitStart"
                android:src="@drawable/ic_minus"
                app:tint="@color/button_background_gray" />

            <ImageButton
                android:id="@+id/reverbPlusButton"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:onClick="@{()->viewModel.controlReverbEffectLevel(1)}"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_plus"
                app:tint="@color/button_background_gray" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/reverbProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/reverbPlusButton"
                android:layout_toRightOf="@+id/reverbMinusButton"
                android:max="100"
                android:progress="@{viewModel._reverbEffectLevel}"
                android:progressTint="@color/black" />

            <TextView
                android:id="@+id/reverbProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/volumeProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="@{viewModel._reverbEffectLevel.toString()}"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>


    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.record_processing.RecordProcessingViewModel" />
    </data>
</layout>