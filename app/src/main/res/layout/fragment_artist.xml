<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.artist.ArtistFragment">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/risingCoverViewPager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/button_background_gray" />

            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                android:id="@+id/viewpagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="34dp"
                app:dotsColor="@color/white"
                app:dotsCornerRadius="8dp"
                app:dotsSize="7dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:progressMode="true"
                app:selectedDotColor="@color/white" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:layout_marginStart="24dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanum_light"
                    android:text="본 광고는 가상으로 제작되었습니다"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </FrameLayout>

        <com.xw.repo.widget.BounceScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--   밴드 커버 랭킹   -->
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="@dimen/menu_title_margin_bottom"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@string/band_cover_ranking_title_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/menu_title_text_size" />

                    <ImageView
                        android:id="@+id/bandCoverRankingDetailButton"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_light"
                        android:gravity="end"
                        android:src="@drawable/ic_more_button" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/bandRankingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <!--   아티스트 (사용자) 랭킹   -->
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="@dimen/menu_title_margin_bottom"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@string/artist_ranking_title_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/menu_title_text_size" />

                    <ImageView
                        android:id="@+id/artistRankingDetailButton"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_light"
                        android:gravity="end"
                        android:src="@drawable/ic_more_button" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:overScrollMode="never"
                    android:id="@+id/artistRankingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wholeArtistButton"
                    android:layout_marginBottom="100dp"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    android:layout_height="120dp"
                    android:fontFamily="@font/nanum_extrabold"
                    android:textSize="24sp" >

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/wholeArtistImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:tintMode="src_over"
                            app:tint="#80000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/nanum_extrabold"
                            android:text="아티스트 검색"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            app:drawableStartCompat="@drawable/ic_baseline_search_24"
                            app:drawableTint="@color/white" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </com.xw.repo.widget.BounceScrollView>
    </LinearLayout>

    <data>

        <variable
            name="home"
            type="com.team_gdb.pentatonic.ui.artist.ArtistFragment" />

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.artist.ArtistViewModel" />
    </data>
</layout>
