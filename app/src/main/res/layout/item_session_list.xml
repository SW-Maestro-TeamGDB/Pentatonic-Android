<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sessionNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/nanum_extrabold"
                android:gravity="center_vertical"
                android:text="세션 이름"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/sessionPeopleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/sessionNameTextView"
                android:fontFamily="@font/nanum_regular"
                android:text="2/3"
                android:textColor="@color/button_background_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/participateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/nanum_regular"
                android:layout_marginEnd="24dp"
                android:background="@drawable/custom_radius_background_dark_sharpen"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="참여하기"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_left_image_add_no_circle"
                app:drawableTint="@color/white" />
        </RelativeLayout>

        <com.chauthai.overscroll.RecyclerViewBouncy
            android:layout_marginTop="4dp"
            app:tension="1000"
            app:friction="150"
            app:gapLimit="100"
            app:speedFactor="5"
            tools:listitem="@layout/item_session_participant_list"
            android:id="@+id/sessionParticipantList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>