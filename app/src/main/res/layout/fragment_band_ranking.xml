<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.band_ranking.BandRankingFragment">

        <include
            layout="@layout/page_title_bar"
            android:id="@+id/titleBar"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:id="@+id/bandRankingTitleTextView"
            android:fontFamily="@font/nanum_regular"
            android:textSize="24sp"
            android:text="@string/band_ranking_page_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.chauthai.overscroll.RecyclerViewBouncy
            android:layout_marginTop="16dp"
            android:id="@+id/bandRankingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.artist.ArtistViewModel" />
    </data>
</layout>
