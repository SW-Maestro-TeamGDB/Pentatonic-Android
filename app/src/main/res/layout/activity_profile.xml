<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <com.xw.repo.widget.BounceScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.profile.ProfileActivity">

            <include
                android:id="@+id/titleBar"
                layout="@layout/page_title_bar"/>

            <RelativeLayout
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:id="@+id/userProfileCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/facebookButton"
                        android:layout_width="40dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_facebook" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/instagramButton"
                        android:layout_width="40dp"
                        android:layout_marginHorizontal="4dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_instagram" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/twitterButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_twitter" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/kakaoButton"
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_kakao" />

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/profileImageLayout"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/userProfileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    <View
                        android:visibility="gone"
                        android:id="@+id/primeBadgeView"
                        android:elevation="5dp"
                        android:background="@drawable/profile_border"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </FrameLayout>

                <LinearLayout
                    android:layout_below="@+id/profileImageLayout"
                    android:id="@+id/nameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/usernameTextView"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:visibility="gone"
                        android:layout_marginStart="8dp"
                        android:id="@+id/primeUserTextView"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="15sp"
                        android:text="PRIME"
                        android:textColor="@color/main_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/nameLayout"
                    android:id="@+id/followLayout"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/nanum_regular"
                        android:text="팔로워 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/userFollowerCountTextView"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanum_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/nanum_regular"
                        android:text="팔로잉 "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/userFollowingCountTextView"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nanum_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_below="@+id/followLayout"
                    android:textColor="@color/black"
                    android:id="@+id/userIntroductionTextView"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatToggleButton
                    android:layout_below="@+id/userIntroductionTextView"
                    android:id="@+id/followButton"
                    android:layout_marginTop="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="16sp"
                    android:textOn="팔로우"
                    android:textOff="팔로우 취소"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nanum_regular"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/toggle_selector_button"/>

            </RelativeLayout>

            <TextView
                android:layout_marginHorizontal="24dp"
                android:fontFamily="@font/nanum_bold"
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:text="포지션"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.chauthai.overscroll.RecyclerViewBouncy
                android:layout_marginTop="16dp"
                android:id="@+id/positionRankingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tension="1000"
                app:friction="150"
                app:gapLimit="100"
                app:speedFactor="5"
                app:viewCountEstimateSize="5" />

            <RelativeLayout
                android:layout_marginHorizontal="24dp"
                android:id="@+id/coverHistoryTitleLayout"
                android:layout_marginTop="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nanum_extrabold"
                    android:gravity="center_vertical"
                    android:text="커버 히스토리"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/coverHistoryDetailButton"
                    android:layout_width="18dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/nanum_light"
                    android:gravity="end"
                    android:src="@drawable/ic_more_button" />

            </RelativeLayout>


            <com.chauthai.overscroll.RecyclerViewBouncy
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:id="@+id/coverHistoryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tension="1000"
                app:friction="150"
                app:gapLimit="100"
                app:speedFactor="5"
                tools:listitem="@layout/item_horizontal_cover_list" />

        </LinearLayout>

    </com.xw.repo.widget.BounceScrollView>

    <data>

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.profile.ProfileViewModel" />
    </data>

</layout>