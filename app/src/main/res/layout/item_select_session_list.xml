<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sessionNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nanum_extrabold"
            android:gravity="center_vertical"
            android:text="세션 이름"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.chauthai.overscroll.RecyclerViewBouncy
            android:layout_marginTop="4dp"
            app:friction="200"
            app:gapLimit="220"
            app:speedFactor="5"
            app:tension="1000"
            app:maxAdapterSizeToEstimate="5"
            app:viewCountEstimateSize="5"
            tools:listitem="@layout/item_session_participant_list"
            android:id="@+id/sessionParticipantList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</layout>