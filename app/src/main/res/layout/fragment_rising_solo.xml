<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.rising_band.RisingBandFragment">

            <include
                android:id="@+id/titleBar"
                layout="@layout/page_title_bar"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginVertical="24dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/bandRankingTitleTextView"
                android:fontFamily="@font/nanum_regular"
                android:textSize="24sp"
                android:text="@string/rising_solo_hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.chauthai.overscroll.RecyclerViewBouncy
                android:layout_marginHorizontal="16dp"
                android:id="@+id/soloCoverList"
                app:tension="1000"
                app:friction="150"
                app:gapLimit="100"
                app:speedFactor="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.lounge.LoungeViewModel" />
    </data>
</layout>