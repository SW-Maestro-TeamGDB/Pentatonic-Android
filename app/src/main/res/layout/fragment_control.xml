<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="32dp"
        android:paddingVertical="16dp"
        tools:context=".ui.record_processing.ControlFragment">

        <TextView
            android:id="@+id/syncControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_extrabold"
            android:text="싱크 조절"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/syncControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/syncControlTitleText">

            <Button
                android:id="@+id/syncMinusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:onClick="@{()->viewModel.controlSyncLevel(-1)}"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/syncPlusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:fontFamily="@font/nanum_extrabold"
                android:text="+"
                android:onClick="@{()->viewModel.controlVolumeLevel(1)}"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/syncProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/syncPlusButton"
                android:layout_toRightOf="@+id/syncMinusButton"
                android:max="100"
                android:progress="@{viewModel.syncLevel}"
                android:progressTint="@color/main_regular" />

            <TextView
                android:id="@+id/syncProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/syncProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="0ms"
                android:textSize="16sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/volumeControlTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/syncControlLayout"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nanum_extrabold"
            android:text="볼륨 조절"
            android:textColor="@color/black"
            android:textSize="22sp" />


        <RelativeLayout
            android:id="@+id/volumeControlLayout"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/volumeControlTitleText">

            <Button
                android:id="@+id/volumeMinusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="@{()->viewModel.controlVolumeLevel(-1)}"
                android:fontFamily="@font/nanum_extrabold"
                android:text="-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/volumePlusButton"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:onClick="@{()->viewModel.controlVolumeLevel(1)}"
                android:fontFamily="@font/nanum_extrabold"
                android:text="+"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/volumeProgressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/volumePlusButton"
                android:layout_toRightOf="@+id/volumeMinusButton"
                android:max="100"
                android:progress="@{viewModel.volumeLevel}"
                android:progressTint="@color/main_regular" />

            <TextView
                android:id="@+id/volumeProgressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/volumeProgressBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="0"
                android:textSize="16sp" />

        </RelativeLayout>

    </RelativeLayout>
    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.record_processing.RecordProcessingViewModel" />
    </data>
</layout>