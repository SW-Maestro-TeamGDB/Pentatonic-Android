<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@color/black"
            android:scaleType="centerCrop"
            android:id="@+id/coverImage"
            android:tintMode="src_over"
            app:tint="#80000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/coverLikeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nanum_regular"
            android:text="100"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_left_image_like"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toEndOf="@+id/coverViewTextView"
            app:layout_constraintTop_toBottomOf="@+id/coverOriginalSongTextView" />

        <TextView
            android:id="@+id/coverOriginalSongTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/nanum_regular"
            android:layout_marginBottom="60dp"
            android:text="ORIGINAL SONG"
            android:textColor="#CCFFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/coverSessionListTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nanum_light"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_left_participants"
            app:drawableTint="@color/white"
            app:layout_constraintStart_toStartOf="@+id/coverOriginalSongTextView"
            app:layout_constraintTop_toBottomOf="@+id/coverOriginalSongTextView" />

        <TextView
            android:id="@+id/coverViewTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/nanum_light"
            android:text="50"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_left_image_view"
            app:drawableTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/coverSessionListTextView"
            app:layout_constraintStart_toEndOf="@+id/coverSessionListTextView"
            app:layout_constraintTop_toBottomOf="@+id/coverOriginalSongTextView" />

        <TextView
            android:fontFamily="@font/nanum_extrabold"
            android:id="@+id/coverNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/coverOriginalSongTextView"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>