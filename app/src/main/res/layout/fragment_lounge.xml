<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:layout_height="300dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolBarLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
                app:contentScrim="@color/white">

                <!--   위클리 챌린지 배너   -->
                <RelativeLayout
                    app:layout_collapseMode="parallax"
                    android:transitionName="weeklyChallengeWork"
                    android:id="@+id/weeklyChallengeSongButton"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:cardCornerRadius="16dp">

                    <ImageView
                        android:src="@color/gray"
                        android:id="@+id/weeklyChallengeSongImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:tintMode="src_atop"
                        app:tint="#80000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/weeklyChallengeSongName"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/background_gradient_text"
                        android:fontFamily="@font/nanum_extrabold"
                        android:padding="8dp"
                        android:text="Weekly Challenge"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/weeklyChallengeSongName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/weeklyChallengeSongArtist"
                        android:layout_marginHorizontal="24dp"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@{viewModel.weeklyChallengeSongName}"
                        android:textColor="@color/white"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/weeklyChallengeSongArtist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="26dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="@font/nanum_light"
                        android:text="@{viewModel.weeklyChallengeSongArtist}"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </RelativeLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_marginTop="32dp"
                    android:id="@+id/tbActivityMaterialDetail"
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:layout_height="100dp"
                    app:layout_scrollFlags="scroll"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:paddingHorizontal="8dp"
                        android:paddingTop="48dp"
                        android:elevation="1dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/pentatonic_white"
                            android:id="@+id/titleTextView"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/userProfileImage"
                            android:layout_alignBottom="@+id/userProfileImage"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/nanum_extrabold"
                            android:gravity="center_vertical"
                            android:text="pentatonic"
                            android:textColor="@color/white"
                            android:textSize="24sp" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/userProfileImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="16dp"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />
                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".ui.lounge.LoungeFragment">

                <!--   떠오르는 밴드 커버   -->
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="@dimen/menu_title_margin_bottom"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@string/rising_band_cover_title_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/menu_title_text_size" />

                    <ImageView
                        android:id="@+id/risingBandDetailButton"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_light"
                        android:gravity="end"
                        android:src="@drawable/ic_more_button" />

                </RelativeLayout>

                <com.chauthai.overscroll.RecyclerViewBouncy
                    app:friction="200"
                    app:gapLimit="220"
                    app:speedFactor="5"
                    app:tension="1000"
                    app:maxAdapterSizeToEstimate="5"
                    app:viewCountEstimateSize="5"
                    android:id="@+id/bandCoverList"
                    tools:listitem="@layout/item_horizontal_cover_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--   떠오르는 솔로 커버   -->
                <RelativeLayout
                    android:layout_marginHorizontal="24dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="@dimen/menu_title_margin_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@string/rising_solo_cover_title_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/menu_title_text_size" />

                    <ImageView
                        android:id="@+id/risingSoloDetailButton"
                        android:layout_width="18dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/nanum_light"
                        android:gravity="end"
                        android:src="@drawable/ic_more_button" />

                </RelativeLayout>

                <com.chauthai.overscroll.RecyclerViewBouncy
                    app:friction="200"
                    app:gapLimit="220"
                    app:speedFactor="5"
                    app:tension="1000"
                    app:maxAdapterSizeToEstimate="5"
                    app:viewCountEstimateSize="5"
                    android:id="@+id/soloCoverList"
                    tools:listitem="@layout/item_horizontal_cover_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!--   떠오르는 솔로 커버   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/wholeCoverButton"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginBottom="36dp"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    android:layout_height="120dp"
                    android:fontFamily="@font/nanum_extrabold"
                    android:textSize="24sp" >

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/wholeCoverImageView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:tintMode="src_over"
                            app:tint="#80000000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"

                            android:drawablePadding="8dp"
                            android:fontFamily="@font/nanum_extrabold"
                            android:text="전체 커버 및 검색"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            app:drawableStartCompat="@drawable/ic_baseline_search_24"
                            app:drawableTint="@color/white" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <data>

        <variable
            name="home"
            type="com.team_gdb.pentatonic.ui.lounge.LoungeFragment" />
        
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.lounge.LoungeViewModel" />
    </data>
</layout>
