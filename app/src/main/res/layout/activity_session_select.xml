<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.session_select.SessionSelectActivity">

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:layout_alignParentTop="true"
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_button"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="세션 구성"
                android:textColor="@color/black"
                android:textSize="@dimen/page_title_text_size" />
        </LinearLayout>


        <TextView
            android:layout_marginHorizontal="24dp"
            android:id="@+id/hintTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBar"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nanum_regular"
            android:text="밴드에 참가시킬 세션을 선택해주세요."
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.chauthai.overscroll.RecyclerViewBouncy
            android:id="@+id/sessionList"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hintTextView"
            android:layout_marginBottom="70dp"
            android:overScrollMode="never" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/completeSessionSelectButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/selector_button"
            android:enabled="false"
            android:fontFamily="@font/nanum_extrabold"
            android:gravity="center"
            android:text="완료하기"
            android:textColor="@color/white" />

    </RelativeLayout>

    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.band_cover.BandCoverViewModel" />
    </data>
</layout>