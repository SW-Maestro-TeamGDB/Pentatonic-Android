<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cover_play.CoverPlayActivity">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tintMode="src_over"
            app:tint="#80000000" />

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_button"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingHorizontal="16dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBar"
            android:layout_marginTop="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="16dp"
                android:id="@+id/coverBackgroundImageView"
                android:layout_width="360dp"
                android:layout_height="360dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />

            <TextView
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="32dp"
                android:id="@+id/coverTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.coverEntity.coverName}"
                android:textColor="@color/white"
                android:fontFamily="@font/nanum_extrabold"
                android:textSize="24sp" />


            <TextView
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:id="@+id/coverIntroductionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.coverEntity.introduction}"
                android:textColor="@color/white"
                android:fontFamily="@font/nanum_regular"
                android:textSize="16sp" />

            <SeekBar
                android:layout_marginTop="24dp"
                android:progressBackgroundTint="@color/button_background_gray"
                android:progressTint="@color/white"
                android:progress="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginVertical="32dp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.team_gdb.pentatonic.custom_view.PlayButton
                    android:id="@+id/playButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_play"
                    android:tint="@color/white" />

                <ImageButton
                    android:background="@null"
                    android:layout_alignTop="@+id/playButton"
                    android:layout_alignBottom="@+id/playButton"
                    android:layout_toLeftOf="@+id/playButton"
                    android:src="@drawable/ic_move_forward"
                    android:id="@+id/moveForwardButton"
                    android:layout_marginEnd="48dp"
                    app:tint="@color/white"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>

                <ImageButton
                    android:id="@+id/moveBackButton"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignTop="@+id/playButton"
                    android:layout_alignBottom="@+id/playButton"
                    android:layout_marginStart="48dp"
                    android:layout_toRightOf="@+id/playButton"
                    android:background="@null"
                    android:src="@drawable/ic_move_backward"
                    app:tint="@color/white" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.cover_play.CoverPlayingViewModel" />
    </data>
</layout>