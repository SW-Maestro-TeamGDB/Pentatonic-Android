<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cover_play.CoverPlayActivity">

        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tintMode="src_over"
            app:tint="#80000000" />

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_button"
                app:tint="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingHorizontal="24dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleBar"
            android:layout_marginTop="16dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginTop="16dp"
                android:id="@+id/coverBackgroundImageView"
                android:layout_width="360dp"
                android:layout_height="360dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />

            <TextView
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="8dp"
                android:id="@+id/coverTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.coverEntity.coverName}"
                android:textColor="@color/white"
                android:fontFamily="@font/nanum_extrabold"
                android:textSize="24sp" />

            <TextView
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:id="@+id/coverIntroductionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{viewModel.coverEntity.introduction}"
                android:textColor="@color/white"
                android:fontFamily="@font/nanum_regular"
                android:textSize="16sp" />

            <com.google.android.exoplayer2.ui.PlayerControlView
                android:background="@color/transparent"
                app:show_next_button="false"
                app:show_timeout="10000000"
                android:layout_gravity="center"
                app:controller_layout_id="@layout/custom_exo_controller_view"
                app:surface_type="surface_view"
                app:resize_mode="fixed_width"
                app:show_previous_button="false"
                app:use_controller="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="32dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/white"
                    android:gravity="center"
                    android:layout_width="18dp"
                    android:src="@drawable/ic_left_image_like"
                    android:layout_height="18dp"/>

                <TextView
                    android:fontFamily="@font/nanum_regular"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="186"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:gravity="center"
                    android:layout_width="18dp"
                    android:src="@drawable/ic_left_image_comment"
                    android:layout_height="18dp"
                    app:tint="@color/white" />

                <TextView
                    android:fontFamily="@font/nanum_regular"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    app:tint="@color/white"
                    android:gravity="center"
                    android:layout_width="18dp"
                    android:src="@drawable/ic_left_image_view"
                    android:layout_height="18dp"/>

                <TextView
                    android:fontFamily="@font/nanum_regular"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="1.2K"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <data>
        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.cover_play.CoverPlayingViewModel" />
    </data>
</layout>