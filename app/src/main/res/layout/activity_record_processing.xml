<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.record.RecordProcessActivity">

        <androidx.cardview.widget.CardView
            app:cardElevation="0dp"
            android:id="@+id/recordPlayCardView"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="24dp"
            app:cardCornerRadius="24dp"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:id="@+id/recordPlayLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/record_processing_bg" />

                <com.team_gdb.pentatonic.ui.record_processing.PlayButton
                    android:id="@+id/playButton"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_play"
                    android:tint="@color/white" />

                <rm.com.audiowave.AudioWaveView
                    android:id="@+id/audioSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp"
                    app:animateExpansion="true"
                    app:chunkHeight="24dp"
                    app:chunkRadius="5dp"
                    app:chunkSpacing="1dp"
                    app:chunkWidth="3dp"
                    app:minChunkHeight="3dp"
                    app:touchable="true"
                    app:waveColor="@color/white" />


                <com.team_gdb.pentatonic.ui.record.CountUpTextView
                    android:id="@+id/recordTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/audioSeekBar"
                    android:layout_alignStart="@+id/audioSeekBar"
                    android:fontFamily="@font/nanum_light"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/recordPlayCardView">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:clipToPadding="false">

                <View
                    android:background="@drawable/tab_bg_gray"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

                <View
                    android:id="@+id/indicator"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/gradient_bg"/>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/tab_bg"
                    app:tabGravity="fill"
                    app:tabMode="fixed"
                    app:tabSelectedTextColor="#ffffff"
                    app:tabIndicatorHeight="0dp"
                    app:tabRippleColor="@null"/>

            </FrameLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


        <TextView
            android:id="@+id/recordCompleteButton"
            android:text="완료하기"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/nanum_extrabold"
            android:background="@color/main_regular"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    </RelativeLayout>

    <data>

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.record_processing.RecordProcessingViewModel" />
    </data>

</layout>