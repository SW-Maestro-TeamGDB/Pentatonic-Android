<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xw.repo.widget.BounceScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.profile.ProfileActivity">

            <include
                android:id="@+id/titleBar"
                layout="@layout/page_title_bar"/>

            <com.xw.repo.widget.BounceScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:id="@+id/userProfileCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/userProfileImage"
                        android:tintMode="src_over"
                        app:tint="#80000000"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile_image_placeholder"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_baseline_image_search_24"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:tint="@color/white" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/register_nickname_title"
                    android:textColor="#434343"
                    android:fontFamily="@font/nanum_extrabold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/nanum_bold"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:background="@drawable/custom_radius_background_white"
                    android:backgroundTint="@color/gray"
                    android:ems="10"
                    android:text="@={viewModel.userName}"
                    android:hint="@string/register_nickname_edit_text_hint_text"
                    android:paddingHorizontal="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:text="소개글"
                    android:textColor="#434343"
                    android:fontFamily="@font/nanum_extrabold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/userIntroductionEditText"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/nanum_regular"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:hint="간단한 소개글을 입력해주세요."
                    android:background="@drawable/custom_radius_background_white"
                    android:backgroundTint="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingHorizontal="16dp"
                    android:text="@={viewModel.userIntroduce}"/>

                <TextView
                    android:id="@+id/expandSocialLinkLayoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="24dp"
                    android:text="소셜 링크 추가하기"
                    android:textColor="#434343"
                    android:fontFamily="@font/nanum_extrabold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_down_24" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/socialLinkLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="페이스북"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/facebookLinkEditText"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:inputType="textUri"
                        android:hint="https://www.facebook.com/profile.php?id=1234"
                        android:background="@drawable/custom_radius_background_white"
                        android:backgroundTint="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingHorizontal="16dp"
                        android:text="@={viewModel.facebookUrl}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="인스타그램"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/instagramLinkEditText"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:inputType="textUri"
                        android:hint="https://www.instagram.com/example"
                        android:background="@drawable/custom_radius_background_white"
                        android:backgroundTint="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingHorizontal="16dp"
                        android:text="@={viewModel.instagramUrl}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="트위터"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/twitterLinkEditText"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:hint="https://twitter.com/example"
                        android:maxLines="1"
                        android:inputType="textUri"
                        android:background="@drawable/custom_radius_background_white"
                        android:backgroundTint="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingHorizontal="16dp"
                        android:text="@={viewModel.twitterUrl}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="카카오톡 오픈 프로필"
                        android:textColor="#434343"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/kakaoLinkEditText"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:maxLines="1"
                        android:inputType="textUri"
                        android:hint="https://open.kakao.com/o/example"
                        android:background="@drawable/custom_radius_background_white"
                        android:backgroundTint="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingHorizontal="16dp"
                        android:text="@={viewModel.kakaoUrl}"/>


                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editCompleteButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="72dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/gradient_selector_button"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="수정 완료"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>


            </com.xw.repo.widget.BounceScrollView>
        </LinearLayout>
    </com.xw.repo.widget.BounceScrollView>
    <data>

        <variable
            name="home"
            type="com.team_gdb.pentatonic.ui.my_page.edit_profile.EditProfileFragment" />

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.my_page.MyPageViewModel" />
    </data>
</layout>
