<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.song_detail.SongDetailActivity">

        <ImageView
            android:id="@+id/albumJacketImageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tintMode="src_over"
            app:tint="#80000000"
            android:src="@drawable/beautiful_album_jacket" />

        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="@dimen/page_title_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_button"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nanum_extrabold"
                android:text="곡 정보"
                android:textColor="@color/white"
                android:textSize="@dimen/page_title_text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.songEntity.songTitle}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/albumJacketImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@+id/titleBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/beautiful_album_jacket"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/albumJacketImage"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_extrabold"
            android:text="예뻤어"
            android:textSize="28sp" />

        <TextView
            android:layout_marginHorizontal="24dp"
            android:textColor="@color/white"
            android:layout_below="@+id/songName"
            android:text="DAY6"
            android:fontFamily="@font/nanum_regular"
            android:textSize="20sp"
            android:layout_marginTop="4dp"
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <data>

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.song_detail.SongDetailViewModel" />
    </data>

</layout>