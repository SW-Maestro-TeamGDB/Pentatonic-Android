<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.song_detail.SongDetailActivity">

            <ImageView
                android:id="@+id/albumJacketBackgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:tintMode="src_over"
                app:tint="#80000000" />

            <LinearLayout
                android:id="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="@dimen/page_title_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_back_button"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/nanum_extrabold"
                    android:text="곡 정보"
                    android:textColor="@color/white"
                    android:textSize="@dimen/page_title_text_size" />
            </LinearLayout>

            <com.xw.repo.widget.BounceScrollView
                android:layout_below="@+id/titleBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="36dp"
                    android:paddingHorizontal="24dp"
                    android:layout_below="@+id/titleBar"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/albumJacketImage"
                        android:layout_width="360dp"
                        android:layout_height="360dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize5Percent" />

                    <TextView
                        android:id="@+id/songName"
                        android:layout_marginStart="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/nanum_extrabold"
                        android:text="@{viewModel.songEntity.songName}"
                        android:textSize="28sp" />

                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginStart="4dp"
                        android:text="@{viewModel.songEntity.artistName}"
                        android:fontFamily="@font/nanum_regular"
                        android:textSize="20sp"
                        android:layout_marginTop="4dp"
                        android:id="@+id/artistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="48dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/song_detail_card_view_background"
                        app:cardElevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="앨범명"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:fontFamily="@font/nanum_light"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/albumNameTextView"
                                android:text="@{viewModel.songEntity.albumName}"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/song_detail_card_view_background"
                        app:cardElevation="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="발매일"
                                android:textSize="14sp"
                                android:fontFamily="@font/nanum_light"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/albumReleaseDateTextView"
                                android:text="@{viewModel.songEntity.albumReleaseDate}"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@color/song_detail_card_view_background"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="80dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:text="장르"
                                android:textSize="14sp"
                                android:fontFamily="@font/nanum_light"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/songGenreTextView"
                                android:text="@{viewModel.songEntity.songGenre}"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </com.xw.repo.widget.BounceScrollView>
        </RelativeLayout>

    <data>

        <variable
            name="viewModel"
            type="com.team_gdb.pentatonic.ui.song_detail.SongDetailViewModel" />
    </data>

</layout>